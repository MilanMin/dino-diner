<Page x:Class="PointOfSale.EntreeSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntreeSelection">

    <DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center" FontSize="25">Add To Order</TextBlock>
        <WrapPanel>
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="MinWidth" Value="120"/>
                    <Setter Property="MinHeight" Value="120"/>
                </Style>
            </WrapPanel.Resources>

            <Button Click="EntreeSelected">Brontowurst</Button>
            <Button Click="EntreeSelected">Dino-Nuggets</Button>
            <Button Click="EntreeSelected">Prehistoric PB&amp;J</Button>
            <Button Click="EntreeSelected">Pterodactyl Wings</Button>
            <Button Click="EntreeSelected">Steakosaurus Burger</Button>
            <Button Click="EntreeSelected">T-Rex Kingburger</Button>
            <Button Click="EntreeSelected">Veloci-Wrap</Button>
        </WrapPanel>

    </DockPanel>
</Page>
