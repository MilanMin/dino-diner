<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu Category Selection">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" TextAlignment="Center" FontSize="25">Add To Order</TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>

            </Grid.RowDefinitions>
            <Button Click="SelectCombo" Grid.Column="0" Grid.Row="0" FontFamily="Goudy Stout" FontSize="25">Combos</Button>
            <Button Click="SelectEntree" Grid.Column="1" Grid.Row="0" FontFamily="Goudy Stout" FontSize="25">Entrees</Button>
            <Button Click="SelectDrink" Grid.Column="0" Grid.Row="1" FontFamily="Goudy Stout" FontSize="25">Drinks</Button>
            <Button Click="SelectSide" Grid.Column="1" Grid.Row="1" FontFamily="Goudy Stout" FontSize="25">Sides</Button>


        </Grid>
    </DockPanel>
    
</Page>
